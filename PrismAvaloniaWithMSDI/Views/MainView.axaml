<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:avalonia="using:Material.Icons.Avalonia"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewmodels="using:PrismAvaloniaWithMSDI.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="viewmodels:MainViewModel"
             x:Class="PrismAvaloniaWithMSDI.Views.MainView">
      <DockPanel>
    <Border DockPanel.Dock="Top" Height="45" BorderBrush="LightGray"  Padding="8" BorderThickness="0 0 0 1">
      <Grid ColumnDefinitions="Auto,*,Auto">
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <TextBlock VerticalAlignment="Center">Title</TextBlock>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.Column="2">
          <Button Command="{Binding SwitchThemeCommand}">
            <avalonia:MaterialIcon Kind="ThemeLightDark"></avalonia:MaterialIcon>
          </Button>
        </StackPanel>
      </Grid>
    </Border>
  <SplitView DisplayMode="CompactInline">
    <SplitView.Pane>
      <StackPanel Orientation="Vertical">
        <StackPanel.Styles>
          <Style Selector="avalonia|MaterialIcon">
            <Setter Property="Width" Value="22"></Setter>
            <Setter Property="Height" Value="22"></Setter>
          </Style>
          <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="Transparent"></Setter>
          </Style>
          <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
          </Style>
        </StackPanel.Styles>
        <Button Command="{Binding ContentRegionNavigation}" CommandParameter="IndexView">
          <avalonia:MaterialIcon Kind="Home"></avalonia:MaterialIcon>
        </Button>
             <Button Command="{Binding ContentRegionNavigation}" CommandParameter="OuseView">
          <avalonia:MaterialIcon Kind="Pets"></avalonia:MaterialIcon>
        </Button>
      </StackPanel>
    </SplitView.Pane>
    <ContentControl prism:RegionManager.RegionName="MainContent"></ContentControl>
  </SplitView>
  </DockPanel>

</UserControl>