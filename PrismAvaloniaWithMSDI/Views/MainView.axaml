<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:avalonia="using:Material.Icons.Avalonia"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewmodels="using:PrismAvaloniaWithMSDI.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="viewmodels:MainViewModel"
             x:Class="PrismAvaloniaWithMSDI.Views.MainView">
  <SplitView DisplayMode="CompactInline">
    <SplitView.Pane>
      <StackPanel Orientation="Vertical">
        <StackPanel.Styles>
          <Style Selector="avalonia|MaterialIcon">
            <Setter Property="Width" Value="22"></Setter>
            <Setter Property="Height" Value="22"></Setter>
          </Style>
          <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="Transparent"></Setter>
          </Style>
          <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
          </Style>
        </StackPanel.Styles>
        <Button Command="{Binding ContentRegionNavigation}" CommandParameter="IndeView">
          <avalonia:MaterialIcon Kind="Home"></avalonia:MaterialIcon>
        </Button>
      </StackPanel>
    </SplitView.Pane>
    <ContentControl prism:RegionManager.RegionName="MainContent"></ContentControl>
  </SplitView>
</UserControl>